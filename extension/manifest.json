{
  "manifest_version": 3,
  "name": "Random YouTube Video",
  "description": "Play a random video from a specific YouTube channel.",
  "version": "0.0.0.1",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "*://*.youtube.com/channel/*",
		"*://*.youtube.com/@*",
		"*://*.youtube.com/*"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["activeTab", "scripting"]
}